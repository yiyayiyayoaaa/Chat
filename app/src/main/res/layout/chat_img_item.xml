<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/ll_img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >
        <com.microcardio.chat.util.ProgressImageView
            android:id="@+id/iv_send_img"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:background="@drawable/balloon_r"
            android:src="@drawable/pic_loading"
            android:visibility="visible"
            android:scaleType="fitCenter"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:id="@+id/iv_send_portrait_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="left"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:id="@+id/iv_received_portrait_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"

            />
        <com.microcardio.chat.util.ProgressImageView
            android:id="@+id/iv_received_img"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:background="@drawable/balloon_l_pressed"
            android:visibility="visible"
            android:src="@drawable/pic_loading"
            android:scaleType="fitCenter"
            android:maxHeight="10dp"
            />
    </LinearLayout>



</LinearLayout>